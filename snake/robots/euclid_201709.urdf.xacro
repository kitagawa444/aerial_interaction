<?xml version="1.0"?>
<robot
    xmlns:xacro="http://www.ros.org/wiki/xacro" name="dragon" >

  <xacro:arg name="robot_name" default="dragon" />

  <!-- robot urdf -->
  <xacro:include filename="$(find dragon)/robots/quad/euclid_201709.urdf.xacro" />
  <xacro:include filename="$(find snake)/urdf/snake_head.urdf.xacro" />

  <link name="dummy_mouth">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.0001"/>
      <inertia
          ixx="0.0001"
          iyy="0.0001"
          izz="0.0001"
          ixy="0.0"
          ixz="0.0"
          iyz="0.0"/>
    </inertial>
  </link>

  <joint name="dummy_mouth_to_snake" type="fixed">
    <parent link="snake"/>
    <child link="dummy_mouth"/>
    <origin rpy="0 0 0" xyz="0.20 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>
  
</robot>
